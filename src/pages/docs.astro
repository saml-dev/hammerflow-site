---
import { Code } from 'astro:components';
import Layout from '../layouts/Layout.astro';

const resp = await fetch(
  'https://raw.githubusercontent.com/saml-dev/hammerspoon-config/refs/heads/main/sample.toml',
);
const sampleToml = (await resp.text()).split('\n').slice(10).join('\n');
---

<Layout>
  <div class='pt-5 md:pt-10 flex flex-col'>
    <a href='/'>&larr; Go back</a>
    <h2 class='mt-6 text-3xl font-medium text-balance'>
      Full config walkthrough
    </h2>
    <p class='md:text-xl mt-1 mb-2 text-gray-600'>
      Mirrored from <a
        class='underline hover:decoration-2'
        href='https://github.com/saml-dev/hammerflow/blob/main/sample.toml'
        target='_blank'
        >sample.toml</a
      > on Github
    </p>
    <Code
      theme='dark-plus'
      lang='toml'
      code={sampleToml}
      class='rounded-lg p-4 mt-1 text-sm md:text-base overflow-x-scroll'
    />
  </div>
</Layout>
